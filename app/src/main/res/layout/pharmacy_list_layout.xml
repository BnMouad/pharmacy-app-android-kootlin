<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tel"
            app:layout_constraintTop_toBottomOf="@+id/nom" android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nom"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="16dp"
            android:textStyle="bold" android:textColor="@android:color/black"/>
    <TextView
            android:text="Open from "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="20dp" android:textSize="12sp" android:id="@+id/fromTime"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView13"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" android:id="@+id/textView13"
            app:layout_constraintStart_toEndOf="@+id/fromTime"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tel"/>
    <TextView
            android:text="Open from "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" android:id="@+id/toTime"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
            app:layout_constraintStart_toEndOf="@+id/textView13" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="108dp"
            android:layout_height="134dp" app:srcCompat="@mipmap/pharmacy_icon"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>